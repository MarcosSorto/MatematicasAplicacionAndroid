<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".calculos">

    <ImageView
            android:layout_width="107dp"
            android:layout_height="87dp" app:srcCompat="@drawable/descarga"
            android:id="@+id/ivLogo" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:contentDescription="@string/logo"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvOpcion" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ivLogo" android:text="@string/textview"/>
    <TextView
            android:text="@string/ingreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtngresaMensaje" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvOpcion" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.02"/>
    <EditText
            android:layout_width="56dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtCantidad" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="140dp"
            android:layout_marginRight="140dp"
            app:layout_constraintStart_toEndOf="@+id/txtngresaMensaje" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvOpcion" app:layout_constraintHorizontal_bias="0.2"
            android:hint="@string/items" android:importantForAutofill="no" tools:targetApi="o"/>
    <EditText
            android:layout_width="69dp"
            android:layout_height="44dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/txtngresaMensaje" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
    <EditText
            android:layout_width="71dp"
            android:layout_height="46dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/editText3" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/txtngresaMensaje"
            app:layout_constraintStart_toEndOf="@+id/editText2" android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"/>
</android.support.constraint.ConstraintLayout>